{% extends 'base.html.twig' %}

{% block title %}ShoppingList index{% endblock %}

{% block body %}
    <h1>ShoppingList index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Wording</th>
                <th>Store</th>
                <th>Description</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for shopping_list in shopping_lists %}
            <tr>
                <td>{{ shopping_list.id }}</td>
                <td>{{ shopping_list.wording }}</td>
                <td>{{ shopping_list.store }}</td>
                <td>{{ shopping_list.description }}</td>
                <td>{{ shopping_list.createdAt ? shopping_list.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ shopping_list.updatedAt ? shopping_list.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_admin_shopping_list_shopping_list_show', {'id': shopping_list.id}) }}" class="btn btn-info"><i class="fas fa-eye"></i> show</a>
                    <a href="{{ path('app_admin_shopping_list_shopping_list_edit', {'id': shopping_list.id}) }}" class="btn btn-primary"><i class="fas fa-pen"></i> Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
