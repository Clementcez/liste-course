{% extends 'base.html.twig' %}

{% block title %}{{ "ShoppingList"|trans }}{% endblock %}

{% block body %}
    <h1>{{ "ShoppingList"|trans }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{{ "Id"|trans }}</th>
                <td>{{ shopping_list.id }}</td>
            </tr>
            <tr>
                <th>{{ "Wording"|trans }}</th>
                <td>{{ shopping_list.wording }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ shopping_list.description }}</td>
            </tr>
            <tr>
                <th>{{ "CreatedAt"|trans }}</th>
                <td>{{ shopping_list.createdAt ? shopping_list.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>{{ "UpdatedAt"|trans }}</th>
                <td>{{ shopping_list.updatedAt ? shopping_list.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>{{ "ShoppingListItem"|trans }}</th>
                <td>
                    {% for item in shopping_list.shoppingListItems %}
                        <p>{{ item }}</p>
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_shopping_list_shopping_list_index') }}" class="btn btn-warning"><i class="fas fa-arrow-left"></i> {{ "back to list"|trans }}</a>

    <a href="{{ path('app_admin_shopping_list_shopping_list_edit', {'id': shopping_list.id}) }}" class="btn btn-primary"><i class="fas fa-pen"></i> {{ "Edit"|trans }}</a>

    {{ include('admin/shopping_list/shopping_list/_delete_form.html.twig') }}
{% endblock %}
