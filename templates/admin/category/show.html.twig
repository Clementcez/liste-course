{% extends 'base.html.twig' %}

{% block title %}{{ "Category"|trans }}{% endblock %}

{% block body %}
    <h1>{{ "Category"|trans }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{{ "Id"|trans }}</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>{{ "Wording"|trans }}</th>
                <td>{{ category.wording }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_category_index') }}" class="btn btn-warning"><i class="fas fa-arrow-left"></i> {{ "back to list"|trans }}</a>

    <a href="{{ path('app_admin_category_edit', {'id': category.id}) }}" class="btn btn-primary"><i class="fas fa-pen"></i> {{ "Edit"|trans }}</a>

    {{ include('admin/category/_delete_form.html.twig') }}
{% endblock %}
