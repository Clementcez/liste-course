{% extends 'base.html.twig' %}

{% block title %}{{ "Store"|trans }}{% endblock %}

{% block body %}
    <h1>{{ "Store"|trans }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{{ "Id"|trans }}</th>
                <td>{{ store.id }}</td>
            </tr>
            <tr>
                <th>{{ "Wording"|trans }}</th>
                <td>{{ store.wording }}</td>
            </tr>
            <tr>
                <th>{{ "Location"|trans }}</th>
                <td>{{ store.location }}</td>
            </tr>
            <tr>
                <th>{{ "CreatedAt"|trans }}</th>
                <td>{{ store.createdAt ? store.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>{{ "UpdatedAt"|trans }}</th>
                <td>{{ store.updatedAt ? store.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_store_index') }}" class="btn btn-warning"><i class="fas fa-arrow-left"></i> {{ "back to list"|trans }}</a>

    <a href="{{ path('app_admin_store_edit', {'id': store.id}) }}" class="btn btn-primary"><i class="fas fa-pen"></i> {{ "edit"|trans }}</a>

    {{ include('admin/store/_delete_form.html.twig') }}
{% endblock %}
