{% extends 'base.html.twig' %}

{% block title %}Store{% endblock %}

{% block body %}
    <h1>Store</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ store.id }}</td>
            </tr>
            <tr>
                <th>Wording</th>
                <td>{{ store.wording }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ store.location }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ store.createdAt ? store.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ store.updatedAt ? store.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_store_index') }}">back to list</a>

    <a href="{{ path('app_admin_store_edit', {'id': store.id}) }}">edit</a>

    {{ include('admin/store/_delete_form.html.twig') }}
{% endblock %}
