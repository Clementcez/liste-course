{% extends 'base.html.twig' %}

{% block title %}{{ "Product"|trans }}{% endblock %}

{% block body %}
    <h1>{{ "Product"|trans }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{{ "Id"|trans }}</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>{{ "Wording"|trans }}</th>
                <td>{{ product.wording }}</td>
            </tr>
            <tr>
                <th>{{ "CreatedAt"|trans }}</th>
                <td>{{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>{{ "UpdatedAt"|trans }}</th>
                <td>{{ product.updatedAt ? product.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_product_index') }}" class="btn btn-warning"><i class="fas fa-arrow-left"></i> {{ "back to list"|trans }}</a>

    <a href="{{ path('app_admin_product_edit', {'id': product.id}) }}" class="btn btn-primary"><i class="fas fa-pen"></i> {{ "Edit"|trans }}</a>

    {{ include('admin/product/_delete_form.html.twig') }}
{% endblock %}
