{% extends 'base.html.twig' %}

{% block title %}{{ "Product index"|trans }}{% endblock %}

{% block body %}
    <h1>{{ "Product index"|trans }}</h1>

    <table id="product_list" class="table table-striped">
        <thead>
            <tr>
                <th>{{ "Id"|trans }}</th>
                <th>{{ "Wording"|trans }}</th>
                <th>{{ "Category"|trans }}</th>
                <th>{{ "CreatedAt"|trans }}</th>
                <th>{{ "UpdatedAt"|trans }}</th>
                <th>{{ "actions"|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.wording }}</td>
                <td>{{ product.category }}</td>
                <td>{{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ product.updatedAt ? product.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_admin_product_show', {'id': product.id}) }}" class="btn btn-info"><i class="fas fa-eye"></i> {{ "show"|trans }}</a>
                    <a href="{{ path('app_admin_product_edit', {'id': product.id}) }}" class="btn btn-primary"><i class="fas fa-pen"></i> {{ "Edit"|trans }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">{{ "no records found"|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_product_new') }}" class="btn btn-primary"><i class="fas fa-plus"></i> {{ "Create new"|trans }}</a>
{% endblock %}
